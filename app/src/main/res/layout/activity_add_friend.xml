<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.friend.AddListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/add_friend_return"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:src="@mipmap/main_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="申请列表"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/add_friend_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="添加好友"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginRight="20dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_friend_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/add_friend_not_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="暂无消息"
        android:textColor="#FF0000"
        android:textSize="50dp"
        android:visibility="gone" />

</LinearLayout>