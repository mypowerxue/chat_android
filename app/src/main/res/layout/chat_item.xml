<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp">

    <LinearLayout
        android:id="@+id/item_chat_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_chat_icon_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_chat_content_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/item_chat_image_1"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/item_chat_mp4_1"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_mp4_left"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="36"
            android:textColor="#333333" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_chat_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_chat_mp4_2"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_mp4_left"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:text="36"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/item_chat_content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/item_chat_image_2"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/item_chat_icon_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

</RelativeLayout>